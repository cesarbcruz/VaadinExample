<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="appCGCUnit" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <non-jta-data-source>java:/BDerp</non-jta-data-source>
    <class>br.com.cgc.vaadin.model.Turno</class>
    <class>br.com.cgc.vaadin.model.Maquina</class>
    <class>br.com.cgc.vaadin.model.Ocorrencia</class>
    <class>br.com.cgc.vaadin.model.TipoOcorrencia</class>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto " value="create"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.connection.charSet" value="UTF-8"/>
    </properties>
  </persistence-unit>
</persistence>
